default: $(DOC_DIR)/man/index.db
$(DOC_DIR)/man/index.db: $(MAN_SRCS)
	@echo "Updating 'whatis' database"
	$(Q)env -u MANPATH $(MANDB) $(DOC_DIR)/man
endif

